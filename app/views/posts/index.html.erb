<%= render 'sign_in' %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.date %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  
<div id="button"><%= link_to 'Create New Post', new_post_path %></div>

<%= video_tag(
      "cars.mp4",
      id: "background",
      autoplay: true,
      loop: true,
      muted: true,
      poster: ""
)
%>

<br>
